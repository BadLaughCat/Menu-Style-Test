<Window x:Class="Menu_Style_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu_Style_Test"
        mc:Ignorable="d"
        Title="Menu Style Test" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" UseLayoutRounding="True">
    <Grid>
        <Button x:Name="Open" Content="Open">
            <Button.ContextMenu>
                <ContextMenu x:Name="SampleMenu" Style="{StaticResource ContextMenu}"/>
            </Button.ContextMenu>
        </Button>
    </Grid>
</Window>
